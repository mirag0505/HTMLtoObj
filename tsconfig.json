{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES5",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist/lib/es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts"]
}
