{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.eslint.json"
    },
    "rules": {
        "@typescript-eslint/prefer-nullish-coalescing": "error"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"]
}
